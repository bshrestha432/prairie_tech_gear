<%= form_for @search, url: products_path, method: :get, class: "search-form" do |f| %>
  <div class="search-field">
    <%= f.search_field :name_or_description_cont,
          placeholder: "Search products...",
          value: params.dig(:q, :name_or_description_cont) %>
  </div>

  <div class="category-filter">
    <%= f.select :category_id_eq,
          options_from_collection_for_select(@categories, "id", "name", params.dig(:q, :category_id_eq)),
          { include_blank: "All Categories" } %>
  </div>

  <%= f.submit "Search", class: "search-button" %>
  <%= link_to "Clear", products_path, class: "clear-button" if params[:q].present? %>
<% end %>